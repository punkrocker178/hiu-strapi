{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Description": {
      "type": "text"
    },
    "Images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "Price": {
      "type": "integer"
    },
    "PriceDiscounted": {
      "type": "integer"
    },
    "IsActive": {
      "type": "boolean"
    },
    "Category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "Stock": {
      "type": "integer"
    },
    "AdditionalInfo": {
      "type": "json"
    }
  }
}
